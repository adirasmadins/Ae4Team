            android:drawablePadding="15dp"
            android:gravity="top|bottom|left"
            android:paddingLeft="15dp"
            android:text="스타굿즈"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noticeButton" />

        <Button
            android:id="@+id/regionServiceButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_selector"
            android:drawableLeft="@drawable/placeholder"
            android:drawablePadding="15dp"
            android:gravity="top|bottom|left"
            android:paddingLeft="15dp"
            android:text="지역 서비스"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noticeButton" />

        <Button
            android:id="@+id/oneRoomButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_selector"
            android:drawableLeft="@drawable/home"
            android:drawablePadding="15dp"
            android:gravity="top|bottom|left"
            android:paddingLeft="15dp"
            android:text="원룸/함께살아요"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noticeButton" />

        <Button
            android:id="@+id/abilityButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_selector"
            android:drawableLeft="@drawable/brain"
            android:drawablePadding="15dp"
            android:gravity="top|bottom|left"
            android:paddingLeft="15dp"
            android:text="재능"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noticeButton" />

        <Button
            android:id="@+id/communityButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_selector"
            android:drawableLeft="@drawable/comunity"
            android:drawablePadding="15dp"
            android:gravity="top|bottom|left"
            android:paddingLeft="15dp"
            android:text="커뮤니티"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noticeButton" />

        <Button
            android:id="@+id/lightningButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/category_selector"
            android:drawableLeft="@drawable/gift"
            android:drawablePadding="15dp"
            android:gravity="top|bottom|left"
            android:paddingLeft="15dp"
            android:text="번개나눔"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            app:layout_constraintHorizontal_bias="0.0"
